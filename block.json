{
	"apiVersion": 2,
	"name": "create-block/ufr-slider",
	"version": "0.1.0",
	"title": "UFR - Slider de Imagens e Postagens",
	"category": "widgets",
	"icon": "slides",
	"description": "Componente do DSGOV para o tema WP da Universidade Federal de Rondon√≥polis.",
	"supports": {
		"html": false
	},
	"textdomain": "wp-idg-ufr__block-slider",
	"editorScript": "file:./build/index.js",
	"editorStyle": "file:./build/index.css",
	"style": "file:./build/style-index.css",
  	"attributes": {
		"position": {
			"type": "string",
			"enum": ["start", "center", "end"],
			"default": "center"
		},
		"slides": {
			"type": "array",
            "default": []
		},
		"usePosts": {
            "type": "boolean",
            "default": false
        },
		"postType": {
            "type": "string",
            "default": "recent"
        },
		"postCategory" : {
            "type": "string",
            "default": ""
        },
		"slidesToShow" : {
			"type": "number",
			"default": 1
		},
		"slidesToScroll" : {
            "type": "number",
            "default": 1
        },
		"duration": {
            "type": "number",
            "default": 0.5
        },
		"responsive" : {
            "type": "string",
            "default": ""
        },
		"itemWidth": {
            "type": "number",
            "default": -1
        },
		"exactWidth": {
			"type": "number",
            "default": -1
        },
		"images": {
			"type": "array",
			"default": []
		}
	}
}
